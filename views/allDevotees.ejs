  <script>
    document.querySelector("#search-devotees")
      .addEventListener("input", function () {
        var typed = this.value.trim();
        if (typed.length > 0) {
          axios.get(`/user/${typed}`)
            .then(response => {
              var clutter = "";
              response.data.forEach(user => {
                clutter += `
                <tr>
                  <td style="color: red;">
                    ${user.rank}
                  </td>
                  <td style="color: orange;">
                    ${user.name}
                  </td>
                  <td style="color: blue;">
                    ${user.dailyCounts.length > 0 ? user.dailyCounts[user.dailyCounts.length - 1].count : 0}
                  </td>
                  <td style="color: green;">
                    ${user.totalCount}
                  </td>
                </tr>
              `;
              });
              document.querySelector("#userTableBody").innerHTML = clutter;
            })
            .catch(error => {
              console.error('Error searching users:', error);
              // Handle errors if any
            });
        }
      });

  </script>

